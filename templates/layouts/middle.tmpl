{{ define "middle.tmpl" }}
  <link rel="stylesheet" href="{{ getFromConfig "site.prefix" }}/static/{{ getFromConfig "site.css" }}">
  <link rel="stylesheet" href="/static/monokai.css">
</head>
<body>
  <div class="main">
    <div class="header-container">
      <div class="avatar" id="avatar"><img src="https://s3.bmp.ovh/imgs/2025/11/06/2554356063f54a17.jpg" alt="avatar"></div>
      <div class="logo" id="logo"><a href="{{ getFromConfig "site.prefix" }}/">阿Q的博客</a></div>
      <div class="nav">
        <a href="{{ getFromConfig "site.prefix" }}/">首页</a>
        <a href="{{ getFromConfig "site.prefix" }}/posts">文章</a>
        <a href="{{ getFromConfig "site.prefix" }}/categories">分类</a>
        <a class="hidden-xs" href="{{ getFromConfig "site.prefix" }}/archive">归档</a>
        <a class="hidden-xs" href="{{ getFromConfig "site.prefix" }}/tags">标签</a>
        <a href="{{ getFromConfig "site.prefix" }}/about">关于</a>
      </div>
      <div class="social-links">
        <a href="{{ getFromConfig "site.github" }}" aria-label="Github">
          <img src="{{ getFromConfig "site.prefix" }}/static/github.svg" alt="Github" width="16" height="16" aria-hidden="true" focusable="false">
        </a>
        <a href="{{ getFromConfig "site.twitter" }}" aria-label="Twitter">
          <img src="{{ getFromConfig "site.prefix" }}/static/twitter.svg" alt="Twitter" width="16" height="16" aria-hidden="true" focusable="false">
        </a>
        <a href="{{ getFromConfig "site.prefix" }}/atom.xml" aria-label="RSS">
          <img src="{{ getFromConfig "site.prefix" }}/static/rss.svg" alt="RSS" width="16" height="16" aria-hidden="true" focusable="false">
        </a>
      </div>
    </div>
    <div class="content-container">
{{ end }}